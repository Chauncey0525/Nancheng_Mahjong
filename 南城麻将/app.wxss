/**app.wxss**/
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-attachment: fixed;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 32rpx;
  color: #333;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 通用按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
  margin: 10rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background-color: #4A90E2;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.btn-primary:active {
  background-color: #357ABD;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.4);
  transform: translateY(1rpx);
}

.btn-secondary {
  background-color: #6c757d;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.btn-secondary:active {
  background-color: #5a6268;
  box-shadow: 0 2rpx 8rpx rgba(108, 117, 125, 0.4);
  transform: translateY(1rpx);
}

.btn-success {
  background-color: #28a745;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.btn-success:active {
  background-color: #218838;
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.4);
  transform: translateY(1rpx);
}

.btn-danger {
  background-color: #dc3545;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.btn-danger:active {
  background-color: #c82333;
  box-shadow: 0 2rpx 8rpx rgba(220, 53, 69, 0.4);
  transform: translateY(1rpx);
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.card-title {
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #2c3e50;
  border-left: 8rpx solid #667eea;
  padding-left: 24rpx;
  position: relative;
  letter-spacing: 1rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-label {
  font-size: 30rpx;
  color: #495057;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  text-align: left;
  min-width: 0;
  overflow: visible;
  display: block;
  word-break: normal;
  white-space: normal;
  transition: all 0.3s ease;
  background-color: #fafbfc;
}

.input:focus {
  border-color: #667eea;
  background-color: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 选择器样式 */
.picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 32rpx;
  background-color: #fafbfc;
  transition: all 0.3s ease;
  position: relative;
}

.picker:active {
  border-color: #667eea;
  background-color: white;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background-color: #E6F7FF;
  color: #1890FF;
}

.tag-success {
  background-color: #F6FFED;
  color: #52C41A;
}

.tag-danger {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

/* 结果展示样式 */
.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-value.positive {
  color: #52C41A;
}

.result-value.negative {
  color: #FF4D4F;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-state-text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 10rpx;
}

.empty-state-hint {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}
