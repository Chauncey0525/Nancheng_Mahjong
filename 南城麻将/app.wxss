/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 32rpx;
  color: #333;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
  margin: 10rpx;
}

.btn-primary {
  background-color: #4A90E2;
  color: white;
}

.btn-secondary {
  background-color: #7A7E83;
  color: white;
}

.btn-success {
  background-color: #52C41A;
  color: white;
}

.btn-danger {
  background-color: #FF4D4F;
  color: white;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 6rpx solid #4A90E2;
  padding-left: 20rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4A90E2;
}

/* 选择器样式 */
.picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: white;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background-color: #E6F7FF;
  color: #1890FF;
}

.tag-success {
  background-color: #F6FFED;
  color: #52C41A;
}

.tag-danger {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

/* 结果展示样式 */
.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-value.positive {
  color: #52C41A;
}

.result-value.negative {
  color: #FF4D4F;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-state-text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 10rpx;
}

.empty-state-hint {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}
