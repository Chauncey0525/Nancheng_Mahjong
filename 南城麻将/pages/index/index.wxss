/* pages/index/index.wxss */
.players-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.player-item {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.player-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.player-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  justify-content: space-between;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.player-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  flex: 1;
  min-width: 0;
  letter-spacing: 1rpx;
}

.dealer-switch {
  margin-right: 12rpx;
  flex-shrink: 0;
  transform: scale(1.1);
}

.dealer-label {
  font-size: 28rpx;
  color: #667eea;
  flex-shrink: 0;
  white-space: nowrap;
  font-weight: 600;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 8rpx;
}

.draw-game-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.draw-game-switch {
  flex-shrink: 0;
  transform: scale(1.1);
}

.draw-game-label {
  font-size: 26rpx;
  color: #6c757d;
  flex-shrink: 0;
  line-height: 1.6;
  flex: 1;
}

.multi-win-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.multi-win-type-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.multi-win-player-name {
  font-size: 30rpx;
  color: #2c3e50;
  min-width: 80rpx;
  font-weight: 700;
}

.winner-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.winner-label {
  font-size: 30rpx;
  color: #2c3e50;
  min-width: 120rpx;
  font-weight: 600;
}

.ma-input {
  width: 100% !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  box-sizing: border-box !important;
  padding: 0 20rpx !important;
  min-width: 0 !important;
  display: block !important;
  overflow: visible !important;
  text-overflow: clip !important;
}

.radio-group {
  display: flex;
  gap: 40rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #495057;
}

.checkbox-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
}

.gang-list {
  margin-bottom: 20rpx;
}

.gang-item {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.gang-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.gang-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e9ecef;
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
}

.delete-btn {
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
  border-radius: 8rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(235, 51, 73, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(235, 51, 73, 0.4);
}

.results-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  border-left: 8rpx solid #667eea;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.result-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.result-label {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
  letter-spacing: 1rpx;
}

.result-value {
  font-size: 42rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.result-details {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #e9ecef;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.detail-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.detail-row {
  width: 100%;
  margin-bottom: 10rpx;
}

.detail-text {
  color: #2c3e50;
  font-weight: 600;
  font-size: 30rpx;
}

.detail-info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  gap: 20rpx;
}

.detail-base {
  color: #6c757d;
  font-size: 24rpx;
  white-space: nowrap;
  flex-shrink: 0;
  vertical-align: middle;
  font-weight: 500;
}

.detail-breakdown {
  font-size: 24rpx;
  color: #667eea;
  white-space: nowrap;
  flex-shrink: 0;
  vertical-align: middle;
  font-weight: 600;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 8rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding-bottom: 40rpx;
}

.action-buttons .btn {
  width: 100%;
  padding: 36rpx 0;
  font-size: 38rpx;
  border-radius: 16rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.action-buttons .btn-primary {
  background-color: #4A90E2;
  color: #ffffff;
}

.action-buttons .btn-primary:active {
  background-color: #357ABD;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.5);
}

.action-buttons .btn-success {
  background-color: #28a745;
  color: #ffffff;
}

.action-buttons .btn-success:active {
  background-color: #218838;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.5);
}

.action-buttons .btn-secondary {
  background-color: #6c757d;
  color: #ffffff;
}

.action-buttons .btn-secondary:active {
  background-color: #5a6268;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(108, 117, 125, 0.5);
}

.action-buttons .btn[disabled] {
  background-color: #adb5bd !important;
  color: #ffffff !important;
  opacity: 0.7;
  box-shadow: 0 4rpx 12rpx rgba(173, 181, 189, 0.3);
  cursor: not-allowed;
}
