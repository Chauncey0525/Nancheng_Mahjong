/* pages/history/history.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.header-count {
  font-size: 28rpx;
  color: #999;
}

.stats-section {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-name {
  font-size: 32rpx;
  color: #333;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.history-time {
  font-size: 28rpx;
  color: #999;
}

.history-summary {
  margin-bottom: 20rpx;
}

.summary-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.summary-label {
  color: #666;
  width: 140rpx;
}

.summary-value {
  color: #333;
  flex: 1;
}

.history-results {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #F0F0F0;
}

.result-mini {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.result-mini-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.result-mini-score {
  font-size: 32rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  flex: 1;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #4A90E2;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 15rpx 20rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  flex-wrap: wrap;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-item text {
  color: #666;
}

.detail-item .positive,
.detail-item .negative {
  font-weight: bold;
  font-size: 32rpx;
}
